{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,

    /* Paths */
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",

    /* Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}